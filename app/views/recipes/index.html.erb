<ul class="nav nav-pills">
  <li>
    <%= link_to('New Recipe', new_recipe_path) %>
  </li>
</ul>


<% @recipes.each do |recipe| %>
  <div class="row">
     <div class="col-md-4 col-sm-4">
      <p class="lead"><%= link_to(recipe.name, recipe) %>
      <p><%= recipe.course %>
      <p><%= recipe.cooktime %>
      <p><%= recipe.servingsize %>
      <p><%= recipe.instructions %>
      <p><% recipe.ingredients.each do |i| %>
          <%= i[:name] %> <br>
          <% end %>
    </div>
  </div>
<% end %>
